<!-- Where all the magic happens -->
<!-- LOGIN FORM -->
<div class="text-center" style="padding:50px 0">
  <div class="logo">login</div>
  <!-- Main Form -->
  <div class="login-form-1">
    <%= form_for :user, {url: authenticate_path, method: 'post'} do |f| %>
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
            <%= label :user, :cartao, class: 'sr-only' %>
            <%= text_field :user, :cartao, class: 'form-control', placeholder: '000000' %>
          </div>
          <div class="form-group">
            <%= label :user, :password, class: 'sr-only' %>
            <%= password_field :user, :password, class: 'form-control', placeholder: 'senha' %>
          </div>
        </div>
        <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
      </div>
      <div class="etc-login-form">
        <p>Novo usu√°rio? <a href="<%= new_user_path %>">Cadastre-se</a></p>
      </div>
    <% end %>
  </div>
  <!-- end:Main Form -->
</div>
